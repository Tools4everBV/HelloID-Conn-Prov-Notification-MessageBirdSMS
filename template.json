[
    {
      "key": "scriptFlow",
      "type": "input",
      "defaultValue": "SendSMS",
      "templateOptions": {
        "label": "Script flow",
        "disabled": false
      },
      "hide": true
    },
    {
      "key": "recipients",
      "type": "input",
      "defaultValue": "{{person.Contact.Personal.Phone.Mobile}}",
      "templateOptions": {
        "label": "Employee mobile",
        "disabled": false
      }
    },
    {
      "key": "personName",
      "type": "input",
      "defaultValue": "{{person.displayName||\"person name\"}}",
      "templateOptions": {
        "label": "Person name"
      }
    },
    {
      "key": "body",
      "type": "textarea",
      "defaultValue": "Dear {{person.Name.NickName}}, you can login with username: {{person.accounts.MicrosoftActiveDirectory.AdditionalFields.userPrincipalName}} with password: {{person.accounts.MicrosoftActiveDirectory.Password}}.",
      "templateOptions": {
        "label": "Message",
        "placeholder": "",
        "required": true,
        "rows": 5
      }
    }
  ]